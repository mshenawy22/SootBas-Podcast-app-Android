<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/news_item_cardview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pcard_view"
        style="@style/NewsCardView"
        app:cardCornerRadius="@dimen/news_cardView_cornerRadius"
        app:cardElevation="@dimen/elevation"
        android:layout_marginBottom="8dp">

        <RelativeLayout
            android:id="@+id/newsImage_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/podcast_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:background="@color/colorBlack"/>

            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_alignParentBottom="true"

                android:layout_width="match_parent"
                android:background="@color/md_DB_1"

                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/podcast_artist_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginBottom="@dimen/pactivity_vertical_margin"
                    android:text="#Artist"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:fontFamily="sans-serif-condensed"

                    android:layout_centerHorizontal="true"

                    android:layout_alignParentBottom="true"
                    android:elevation="@dimen/elevation"/>

            </LinearLayout>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/activity_vertical_margin">



    </LinearLayout>

</LinearLayout>